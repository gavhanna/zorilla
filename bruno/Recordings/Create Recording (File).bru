meta {
  name: Create Recording (File)
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/api/recordings
  body: multipartForm
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:multipart-form {
  title: My Recording
  transcript: This is a sample transcript
  file: @file(/home/gavin/Projects/zorilla/test-files/sample-audio.mp3)
}

assert {
  res.status: eq 201
  res.body.id: isString
  res.body.filePath: isString
  res.body.title: eq My Recording
}

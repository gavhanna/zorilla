meta {
  name: Create Recording
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/recordings
  body: multipartForm
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:multipartForm {
  title: My Recording
  transcript: This is a sample transcript
  file: {{basePath}}/test-files/sample-audio.mp3
}

vars:post-response {
  recordingId: res.body.id
}

assert {
  res.status: eq 201
  res.body.id: isString
  res.body.filePath: isString
  res.body.title: eq My Recording
}


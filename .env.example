DATABASE_URL=postgres://postgres:postgres@localhost:5432/zorilla
ENABLE_REGISTRATION=true
JWT_SECRET=your-secret-key

# Transcription Service (faster-whisper)

# Choose transcription method:
# - Docker (recommended for development): Set USE_DOCKER_FOR_TRANSCRIPTION=true
# - Local Python (requires pip install faster-whisper): Leave USE_DOCKER_FOR_TRANSCRIPTION unset/false
USE_DOCKER_FOR_TRANSCRIPTION=true          # Use Docker container for transcription
DOCKER_TRANSCRIPTION_CONTAINER=zorilla-transcription  # Container name

WHISPER_MODEL_NAME=base                    # Model: tiny, base, small, medium, large-v1, large-v2, large-v3
TRANSCRIPTION_WORKER_ENABLED=true          # Enable/disable worker
TRANSCRIPTION_WORKER_INTERVAL_MS=2000      # Polling interval in milliseconds
PYTHON_PATH=python3                        # Optional: Path to Python executable (for local mode)